<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="40dp"
    app:cardElevation="3dp"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="0dp"
    android:layout_marginHorizontal="20dp"


    >

    <RelativeLayout
        android:id="@+id/layoutID"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:padding="5dp"
        android:background="@color/event_blue1">

        <ImageView
            android:id="@+id/imageID"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_android_24"
            android:layout_centerVertical="true"
            />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eventNameID"
        android:layout_alignTop="@id/imageID"
        android:text="Title"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_toRightOf="@id/imageID"
        android:layout_toEndOf="@id/imageID"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

        <TextView
            android:id="@+id/eventTimeID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/imageID"
            android:text="Description"
            android:textSize="13sp"
            android:textColor="@color/white"

            android:layout_toEndOf="@id/imageID"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"

            />





    </RelativeLayout>

</androidx.cardview.widget.CardView>